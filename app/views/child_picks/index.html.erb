<p id="notice"><%= notice %></p>

<h1>Child Pick History</h1>

<%= link_to "Home", root_path %>

<table>
  <thead>
    <tr>
      <th>Picked</th>
      <th>Child</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @child_picks.order('created_at DESC').each do |child_pick| %>
      <tr>
        <td><%= child_pick.picked.in_time_zone("Pacific Time (US & Canada)").strftime("%A %B %d: %l:%M %p %Z") %></td>
        <td><%= child_pick.child.name if child_pick.child %></td>
      </tr>
    <% end %>
  </tbody>
</table>


